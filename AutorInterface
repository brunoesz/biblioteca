        // TODO add your handling code here:
    }                                           

    private void btnCriarActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
     
        habilitarCriacaoEditar(true);
        limparDados();
         autor = new Autor();
    }                                        

    private void formWindowClosing(java.awt.event.WindowEvent evt) {                                   
        // TODO add your handling code here:
        int opcao = JOptionPane.showConfirmDialog(null, "Deseja sair?   -_-    ","Se liga",
                JOptionPane.YES_OPTION);
        if(opcao == JOptionPane.YES_OPTION){
            System.exit(0);
        }
    }                                  

    private void btnSalvarActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        habilitarCriacaoEditar(false);
        btnEditar.setEnabled(false);
               autor.setNome(txtNome.getText());
        autor.setGenero(rbMasculino.isSelected());
        if(autor.getId() == 0){
            baseDeDados.criarAutor(autor);
        }else{
            baseDeDados.atualizarAutor(autor);
        }
       
        limparDados();
        preencherTabela(baseDeDados.getAutores());
      
    }                                         

    private void tbAutoresMouseClicked(java.awt.event.MouseEvent evt) {                                       
              btnCriar.setEnabled(false);
              btnEditar.setEnabled(true);
              btnApagar.setEnabled(true);
        
              int id = (int) tbAutores.getValueAt(tbAutores.getSelectedRow(), 0);
              autor = baseDeDados.buscarAutorID(id);
              
             String nome = autor.getNome();
             if(autor.isGenero()){
             rbMasculino.setSelected(true);
             }else {
                 rbFeminino.setSelected(true);
             }
             
              txtNome.setText(nome);
    }                                      

    private void btnEditarActionPerformed(java.awt.event.ActionEvent evt) {                                          
        habilitarCriacaoEditar(true);
        
    }                                         

    private void btnApagarActionPerformed(java.awt.event.ActionEvent evt) {                                          
        if(autor == null || autor.getId() == 0){
            JOptionPane.showMessageDialog(null, "Selecione um autor para apagar");
            return ;
        }
    
        
       int resposta = JOptionPane.showConfirmDialog(null, "Certeza que quer apagar o autor " + autor.getNome()+ " da lista?");
        if(resposta == 0){
            if(baseDeDados.apagarAutor(autor)){
                 limparDados();
                 preencherTabela(baseDeDados.getAutores());
                JOptionPane.showMessageDialog(null, "Dados foram apagados");
                
            }else{
                 JOptionPane.showMessageDialog(null, "Não foi possivel apaga-los");
            }
           
        }
        habilitarCriacaoEditar(false);
    }                                         

    public void habilitarCriacaoEditar(boolean estadoCriar) {
        txtNome.setEnabled(estadoCriar);
        rbFeminino.setEnabled(estadoCriar);
        rbMasculino.setEnabled(estadoCriar);
        btnSalvar.setEnabled(estadoCriar);
        btnCriar.setEnabled(!estadoCriar);
        btnEditar.setEnabled(estadoCriar);
        btnApagar.setEnabled(estadoCriar);
    }
        public void limparDados(){
        txtNome.setText("");
        rbMasculino.setSelected(true);
        autor = new Autor();

           
